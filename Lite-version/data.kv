<Data>:

    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            id: toolbar
            title: 'HOOKAH Keeper'
            md_bg_color: app.theme_cls.primary_color
            elevation: 10
            pos_hint: {'top': 1}

            MDFillRoundFlatIconButton:
                text: "Вернуться назад"
                icon: "chevron-left"
                md_bg_color: .13,.51,.90,1
                pos_hint: {'left': 1, 'center_y': .5}
                on_release: root.manager.current='HomeScreen'
            
        GridLayout:
            size_hint_y: .2
            cols: 2

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: .6
                BoxLayout:
                    padding: 16
                    MDLabel:
                        pos_hint: {'center_x': .5}
                        text: 'Выберите период:'
                BoxLayout:
                    BoxLayout:
                        MDIconButton:
                            icon: 'calendar-edit'
                            on_release: root.show_date_picker_1()
                        MDLabel:
                            id: date_picker_label_1
                    BoxLayout:
                        MDIconButton:
                            icon: 'calendar-edit'
                            on_release: root.show_date_picker_2()
                        MDLabel:
                            id: date_picker_label_2

            FloatLayout:
                MDFillRoundFlatButton:
                    text: 'Поиск'
                    size_hint: .7, .5
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    on_release: root.read_db(date_picker_label_1.text, date_picker_label_2.text)
                    #on_release: root.remove_widget(data_list2)
        
        BoxLayout:

            BoxLayout:
                ScrollView:
                    id: scrollForDatalist
                    MDList:
                        id: data_list
                        padding: 5
                        spacing: 1

            MDSeparator:
                orientation: 'vertical'
            
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: .6
                padding: 10

                BoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        id: n_all_orders
                        font_style: 'Body2'
                    
                    MDLabel:
                        id: n_price
                        font_style: 'Body2'
                    
                    MDLabel:
                        id: n_share
                        font_style: 'Body2'
                
                Image:
                    id: stat_img

<DBListItem>:
    id: dblistitem

    ButtonForDBListItem:
        icon: "delete"
        on_release: root.delete_db_item(dblistitem.tertiary_text)
