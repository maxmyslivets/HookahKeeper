<Home>:

    time_label_1: time_label_1
    time_label_2: time_label_2

    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            id: toolbar
            title: 'HOOKAH Keeper'
            md_bg_color: app.theme_cls.primary_color
            elevation: 10
            pos_hint: {'top': 1}
            
        GridLayout:
            size_hint_y: .2
            cols: 2

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: .6
                MDLabel:
                    id: time_label_1
                    font_size: '20'
                    text_size: self.size
                    halign: 'center'
                    valign: 'bottom'
                MDLabel:
                    id: time_label_2
                    font_size: '30'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

            FloatLayout:
                MDFillRoundFlatButton:
                    text: 'Statistic'
                    size_hint: .7, .5
                    pos_hint: {'center_x': .5, 'center_y': .5}
        
        BoxLayout:
        
            FloatLayout:
                size_hint_x: .6

                BoxLayout:
                    size_hint_y: None
                    height: self.minimum_height
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    orientation: 'vertical'
                    padding: 20
                    spacing: 30


                    MDTextField:
                        id: table
                        hint_text: 'Table'
                    MDDropDownItem:
                        id: cls
                        size_hint_x: 1
                        items: ['classic', 'additive', 'replay']
                        dropdown_bg: [1, 1, 1, 1]
                    MDTextField:
                        id: additive
                        hint_text: 'Additive'
                    MDFillRoundFlatButton:
                        size_hint_x: 1
                        text: 'Add order'
                        on_release: root.add_order(table.text, cls.current_item, additive.text); table.text=''; additive.text=''

            MDSeparator:
                orientation: 'vertical'
                
            ScrollView:
                MDList:
                    id: mdlist


<ListItemWithCheckbox>:

    canvas.before:
        Color:
            rgba: .13,.59,.95,.2
        Rectangle:
            pos: self.pos
            size: self.size

    IconLeftWidget:
        icon: 'smoking'

    RightCheckbox:

    RightCheckbox: