<RootScreen>:
    id: RootScreenId

    time_label_1: time_label_1
    time_label_2: time_label_2
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: .17, .18, .24, .9
            Rectangle:
                pos: self.pos
                size: self.size
        
        AnchorLayout:
            id: Toolbar
            size_hint_y: None
            canvas:
                Color:
                    rgba: .17, .18, .24, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                Image:
                    source: 'logo.png'
                    size_hint: .2, 1

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: .7
                    Label:
                        text: 'HOOKAH KEEPER'
                        font_size: '40sp'
                        text_size: self.size
                        halign: 'left'
                        valign: 'bottom'
                    Label:
                        size_hint_y: .5
                        text: ' by Max Myslivets for Sfera Club'
                        font_size: '14sp'
                        text_size: self.size
                        halign: 'left'
                        valign: 'top'
                
                BoxLayout:
                    orientation: 'vertical'

                    Label:
                        id: time_label_1
                        font_size: '20'
                        text_size: self.size
                        halign: 'center'
                        valign: 'bottom'
                    Label:
                        id: time_label_2
                        font_size: '30'
                        text_size: self.size
                        halign: 'center'
                        valign: 'middle'
                    
                BoxLayout:
                    spacing: 2
                    size_hint_x: .1
                    Button:
                        on_release: root.manager.current = 'Add Hookah Screen'

                BoxLayout:
                    spacing: 2
                    size_hint: None, None
                    size: 68, 32
                    pos_hint: {'top': 1}
                    
                    MDIconButton:
                        id: min_window_button
                        icon: "window-minimize"

                        user_font_size: "14sp"
                        pos_hint: {'top': 1}
                        
                        on_release: app.stop()
                
                    MDIconButton:

                        id: close_window_button
                        icon: "window-close"

                        user_font_size: "14sp"
                        pos_hint: {'top': 1}

                        on_release: app.stop()


        # Столы
        BoxLayout:
            Button:
                text: 'Orders'